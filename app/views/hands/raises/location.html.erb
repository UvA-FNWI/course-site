	<script>
		function setloc(elt)
		{
			loc = $(elt).attr('title')
			
			if (['A1.16', 'A1.20', 'A1.22', 'A1.30'].indexOf(loc) >= 0)
			{
				$('#lochid').val('')
				$('#loctxt').val('')
				$('#loctxt').prop('disabled', false);
				$('#loctxt').prop('placeholder', 'Please enter your table number in room ' + loc);
				$('#loctxt').focus()
			}
			else
			{
				$('#loctxt').prop('disabled', true);
				$('#loctxt').val(loc)
				$('#lochid').val(loc)
			}
		}
	</script>
