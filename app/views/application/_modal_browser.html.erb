<div id="modal-browser" class="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
		<div class="modal-content">
			<div id="modal-browser-header" class="modal-header">
				<h5 id="modal-browser-title" class="modal-title"></h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
			</div>
			<div id="modal-browser-body" class="modal-body">
				<p style="text-align:center; font-size:xx-large"><%= icon 'hammer', size: '64x64' %></p>
			</div>
		</div>
	</div>
</div>

<script>
	$('#modal-browser').on('show.bs.modal', function (e) {
		// clear modal upon load
		$('#modal-browser-title').html('');
		$('#modal-browser-body').html('<p style="text-align:center; font-size:xx-large"><%= icon "hammer", size: '64x64' %></p>');
	})
</script>
