<% for section in current_sections %>

<li class="nav-item dropdown hidden-xs">
	<a href="#collapse-<%= section.title.parameterize %>" class="nav-link dropdoswn-toggle" data-toggle="collapse" role="button" aria-haspopup="true" aria-expanded="false">
		<%= icon 'chevron-right', class: 'chevron d-none d-lg-inline-block' %><%= section.title %>
	</a>
	<ul class="nav collapse" id="collapse-<%= section.title.parameterize %>">
		<% for page in section.pages %>
		<li class="nav-item"><%= link_to (page.title).html_safe, "/#{section.slug}/#{page.slug}", remote: false, class: 'nav-link ' + (page.public ? '' : 'menu-hidden') %></li>
		<% end %>
	</ul>
</li>

<% end %>
