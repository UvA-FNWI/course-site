<div class="col-12">

	<% @psets.each do |p| %>
	<%= link_to p.name, { pset_id: p.id } %> 
	<% end %>

	<% if @pset %>
	<%= form_tag students_quiz_submit_path do |f| %>
	<%= hidden_field_tag :pset_id, @pset.id %>
	<table class="table" style="width:auto">
		<tr>
			<td>Name</td>
			<% if @grading_definition %>
			<% @grading_definition['subgrades'].each do |subgrade_name, subgrade_type| %>
			<td><%= subgrade_name %></td>
			<% end %>
			<% end %>
		</tr>
		<% @students.each do |s| %>
		<tr>
			<td>
				<input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= s.name %>">
			</td>
			<% if @grading_definition %>
			<% bla = s.submits.where(pset_id: @pset.id).first%>
			<% @grading_definition['subgrades'].each do |subgrade_name, subgrade_type| %>
			<td>
				<input type="text" name="grades[<%= s.id %>][subgrades][<%= subgrade_name %>]" class="form-control" placeholder="" value="<%= bla.grade.subgrades[subgrade_name] if bla && bla.grade %>">
			</td>
			<% end %>
			<td>
				<%= bla.grade.comments if bla && bla.grade %>
			</td>
			<td>
				<input type="text" name="grades[<%= s.id %>][notes]" class="form-control" placeholder="" value="<%= bla.grade.notes if bla && bla.grade %>">
			</td>
			<% end %>
		</tr>
		<% end %>
	</table>
	<input type="submit">
	<% end %>
	<% end %>

</div>
