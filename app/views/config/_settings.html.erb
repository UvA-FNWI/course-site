<h2 class="mb-2">
	<%= fa_icon "th-list", style: 'margin-right:0.25em;', class: 'dropcap'  %>
	Settings
</h2>

<%= form_for(:settings, url: config_settings_path(), remote: true, html: { id: "enable_hands_form" }) do |form| %>
	<div class="form-group">
		<div class="form-check">
			<%= form.check_box :hands_allow, { remote: true, checked: Settings.hands_allow, id: "enable_hands_form_check", class: "form-check-input", onclick: "$('#enable_hands_form').trigger('submit.rails');" } %>
			<label class="form-check-label" for="enable_hands_form_check">
				Enable student question queue
			</label>
		</div>
	</div>
<% end %>

